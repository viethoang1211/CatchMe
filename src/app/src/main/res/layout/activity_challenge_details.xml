<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ChallengeDetails"
    android:background="@color/primary_dark">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/challenge_details_par"
            style="@style/purple_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="34"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />

        <TextView
            android:id="@+id/textView11"
            style="@style/white_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="End date"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/challenge_details_date" />

        <ImageView
            android:id="@+id/challenge_details_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/test_image" />

        <TextView
            android:id="@+id/challenge_details_date"
            style="@style/purple_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="29 December, 2022"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <TextView
            android:id="@+id/challenge_details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Green Race 2022"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/challenge_details_image" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/challenge_details_name"
            app:srcCompat="@drawable/calender" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:srcCompat="@drawable/test_image" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="@id/imageView2"
            app:layout_constraintTop_toBottomOf="@id/imageView2"
            app:srcCompat="@drawable/profile" />

        <TextView
            android:id="@+id/textView14"
            style="@style/white_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Participants"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/challenge_details_par" />

        <TextView
            android:id="@+id/challenge_details_host"
            style="@style/purple_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GreenViet"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />

        <TextView
            android:id="@+id/textView16"
            style="@style/white_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Host"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="@+id/challenge_details_host" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="About Challenge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <TextView
            android:id="@+id/challenge_details_des"
            style="@style/white_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="GreenRace is an annual race held by GreenViet. It aims to encourage daily exercises and a better physical health for everyone. More information can be found in our website or at local representatives. See you at the race."
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/textView17"
            app:layout_constraintTop_toBottomOf="@+id/textView17" />

        <Button
            android:id="@+id/challenge_details_join"
            style="@style/white_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:drawableRight="@drawable/plus_circle"
            android:text="Join"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/challenge_details_des" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Speed"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toStartOf="@+id/textView23"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/challenge_details_join" />

        <TextView
            android:id="@+id/challenge_details_max_speed"
            style="@style/white_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="15"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/textView19"
            app:layout_constraintTop_toBottomOf="@+id/textView19" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Pace"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@+id/challenge_details_max_speed"
            app:layout_constraintTop_toBottomOf="@+id/challenge_details_max_speed" />

        <TextView
            android:id="@+id/challenge_details_max_pace"
            style="@style/white_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="4:00"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/textView21"
            app:layout_constraintTop_toBottomOf="@+id/textView21" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min Speed"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView19"
            app:layout_constraintTop_toBottomOf="@+id/challenge_details_join" />

        <TextView
            android:id="@+id/challenge_details_min_speed"
            style="@style/white_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="3"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/textView23"
            app:layout_constraintTop_toBottomOf="@+id/textView23" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min Pace"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@+id/challenge_details_min_speed"
            app:layout_constraintTop_toBottomOf="@+id/challenge_details_min_speed" />

        <TextView
            android:id="@+id/challenge_details_min_pace"
            style="@style/white_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="15:00"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/textView26"
            app:layout_constraintTop_toBottomOf="@+id/textView26" />

        <TextView
            android:id="@+id/textView29"
            style="@style/white_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" km/h"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/challenge_details_max_speed"
            app:layout_constraintTop_toTopOf="@+id/challenge_details_max_speed" />

        <TextView
            android:id="@+id/textView30"
            style="@style/white_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" km/h"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/challenge_details_min_speed"
            app:layout_constraintTop_toTopOf="@+id/challenge_details_min_speed" />

        <TextView
            android:id="@+id/textView31"
            style="@style/white_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" /km"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/challenge_details_max_pace"
            app:layout_constraintTop_toTopOf="@+id/challenge_details_max_pace" />

        <TextView
            android:id="@+id/textView32"
            style="@style/white_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" /km"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/challenge_details_min_pace"
            app:layout_constraintTop_toTopOf="@+id/challenge_details_min_pace" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>